<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.sintoon.audiodemo.MainActivity">


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="record audio"
        android:layout_margin="10dp"
        android:onClick="onClick"
        android:id="@+id/audio_record"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="play audio"
        android:layout_margin="10dp"
        android:onClick="onClick"
        android:id="@+id/audio_play"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="media record start"
        android:layout_margin="10dp"
        android:onClick="onClick"
        android:id="@+id/media_recorder"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="media record stop"
        android:layout_margin="10dp"
        android:onClick="onClick"
        android:visibility="gone"
        android:id="@+id/media_recorder_stop"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="media record play"
        android:layout_margin="10dp"
        android:onClick="onClick"
        android:id="@+id/media_play"/>


</LinearLayout>
